datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

model Event {
  id String @id @default(uuid())
  title String
  description String? @default(None)
  color String? @default(None)
  start DateTime
  end DateTime
  repeating_delay DateTime? @default(None)
  author_id String
  created_at DateTime @default(now())
  deleted_at DateTime? @default(None)
}
