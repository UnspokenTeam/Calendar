datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

model User {
  id String @id @default(uuid())
  username String
  password String
  email String
  type UserRole @default(USER)
  created_at DateTime @default(now())
  suspended_at DateTime?
  tokens Token[]
}

model Token {
  id String @id @default(uuid())
  user_id String
  user User @relation(fields: [user_id], references: [id])
  token String
}

enum UserRole {
  ADMIN
  USER
}
